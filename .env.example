# Database
DATABASE_URL=postgresql://user:password@localhost:5432/sme_ad_builder
# For production, use: Vercel Postgres, Supabase, Neon, or PlanetScale

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here

# NextAuth (legacy - can be removed if fully migrated to Clerk)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# OpenAI (for AI-powered features)
OPENAI_API_KEY=sk-your-openai-api-key

# App Configuration
NODE_ENV=development

# ============================================================================
# Facebook Marketing API
# ============================================================================
# Get these from: https://developers.facebook.com/apps
# IMPORTANT: Never commit real secrets! This is just a template.

# Your Facebook App ID (public, safe to share)
FACEBOOK_APP_ID=your_app_id_here

# Your Facebook App Secret (KEEP SECRET!)
FACEBOOK_APP_SECRET=your_app_secret_here

# Your Facebook Page ID (get from facebook.com/your-page/about)
FACEBOOK_PAGE_ID=your_page_id_here

# For testing ONLY - Get test token from: https://developers.facebook.com/tools/accesstoken
# WARNING: Test tokens expire after ~2 hours
FACEBOOK_TEST_ACCESS_TOKEN=your_test_access_token_here

# Your Facebook Ad Account ID (format: act_123456789)
# Get from: https://business.facebook.com/settings/ad-accounts
FACEBOOK_TEST_AD_ACCOUNT_ID=act_your_ad_account_id_here

# ============================================================================
# TikTok Marketing API
# ============================================================================
# Get these from: https://business-api.tiktok.com/portal/
# IMPORTANT: Never commit real secrets! This is just a template.

# Your TikTok App ID
TIKTOK_APP_ID=your_app_id_here

# Your TikTok App Secret (KEEP SECRET!)
TIKTOK_APP_SECRET=your_app_secret_here

# For testing ONLY - Get access token via OAuth flow
# WARNING: Access tokens expire - use OAuth refresh tokens in production
TIKTOK_TEST_ACCESS_TOKEN=your_test_access_token_here

# Your TikTok Advertiser ID
# Get from: https://ads.tiktok.com/i18n/account/info
TIKTOK_TEST_ADVERTISER_ID=your_advertiser_id_here

# ============================================================================
# Google Ads API
# ============================================================================
# Get these from: https://ads.google.com/aw/apicenter
# IMPORTANT: Never commit real secrets! This is just a template.

# Your Google Ads Developer Token
# Apply for one at: https://ads.google.com/aw/apicenter
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here

# Your Google Ads Customer ID (without hyphens, e.g., 1234567890)
GOOGLE_ADS_CUSTOMER_ID=your_customer_id_here

# OAuth credentials for Google Ads API
GOOGLE_ADS_CLIENT_ID=your_oauth_client_id_here
GOOGLE_ADS_CLIENT_SECRET=your_oauth_client_secret_here

# For testing ONLY - Get via OAuth flow
GOOGLE_ADS_TEST_ACCESS_TOKEN=your_test_access_token_here
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token_here

# ============================================================================
# LinkedIn Marketing API
# ============================================================================
# Get these from: https://www.linkedin.com/developers/apps
# IMPORTANT: Never commit real secrets! This is just a template.

# Your LinkedIn App ID
LINKEDIN_APP_ID=your_app_id_here

# Your LinkedIn App Secret (KEEP SECRET!)
LINKEDIN_APP_SECRET=your_app_secret_here

# For testing ONLY - Get via OAuth 2.0 flow
LINKEDIN_TEST_ACCESS_TOKEN=your_test_access_token_here

# Your LinkedIn Ad Account ID (format: urn:li:sponsoredAccount:123456789)
LINKEDIN_TEST_AD_ACCOUNT_ID=your_ad_account_id_here
